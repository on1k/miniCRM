@model IQueryable<miniCRM.Data.Entities.Company>
@{
    ViewBag.Title = "Companies";
}

<h2>Компании</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название организации</th>
            <th>ФИО Сотрудника</th>
            <th>С/Н Счетчика</th>
            <th></th>
        </tr>
    </thead>
    <tboby>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.EmployeName</td>
                <td>@item.ElectricMeter.SerialNumber</td>
                <td><a href="@Url.Action("Edit", "Company", new { id = item.CompanyID })"> <button class="btn btn-primary">Править</button> </a>  
                    <a href="@Url.Action("Delete", "Company", new { id = item.CompanyID })"> <button class="btn btn-primary">Удалить</button> </a> </td>
            </tr>
        }
    </tboby>
</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Create", "Company")"> <button class="btn btn-success">Добавить компанию</button> </a>
    </div>
</div>
